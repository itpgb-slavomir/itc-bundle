#!/usr/bin/env php-fpm
<?php
/**
 * SK ITC Bundle Console Socket Bin
 *
 * @author Slavomir Kuzma <slavomir.kuzma@gmail.com>
 * @licence LGPL
 */

if (PHP_SAPI !== 'cli')
{
    echo 'Warning: ITC should be invoked via the CLI version of PHP, the '.
    	PHP_SAPI.' SAPI is over web interface'.PHP_EOL;
}
require_once (__DIR__ . '/../vendor/autoload.php');

//$socket=$socket->run();
(\Ratchet\Server\IoServer::factory(
    new \Ratchet\Http\HttpServer(
        new \Ratchet\WebSocket\WsServer(
            new \SK\ITCBundle\Application\Socket()
        )
    ), 8581, '0.0.0.0'
))->run();
//