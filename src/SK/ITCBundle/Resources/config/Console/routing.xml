<?xml version="1.0" encoding="UTF-8" ?>
<routes
	xmlns="http://symfony.com/schema/routing"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route
		id="itc_console"
		path="/{_locale}">

		<default key="_controller">SKITCBundle:Console:index</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_console_toolbar"
		path="/toolbar/{_locale}">

		<default key="_controller">SKITCBundle:Console:toolbar</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_console_workspace"
		path="/workspace/{_locale}">

		<default key="_controller">SKITCBundle:Console:workspace</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_console_command"
		path="/command/{_locale}">

		<default key="_controller">SKITCBundle:Console:command</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_console_help"
		path="/help/{_locale}">

		<default key="_controller">SKITCBundle:Console:help</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_console_run"
		path="/run/{_locale}">

		<default key="_controller">SKITCBundle:Console:run</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_mylyn_report"
		path="/{_locale}/mylyn/report">

		<default key="_controller">SKITCBundle:Mylyn:report</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

</routes>