<?xml version="1.0" encoding="UTF-8" ?>
<routes
	xmlns="http://symfony.com/schema/routing"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route
		id="itc_dbal"
		path="/{_locale}">

		<default key="_controller">SKITCBundle:DBAL:index</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_dbal_connection"
		path="/connection/{_locale}">

		<default key="_controller">SKITCBundle:DBAL:connection</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_dbal_orm"
		path="/orm/{_locale}">

		<default key="_controller">SKITCBundle:DBAL:orm</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_dbal_em"
		path="/entity-manager/{_locale}">

		<default key="_controller">SKITCBundle:DBAL:entityManager</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_dbal_entity"
		path="/entity/{_locale}">

		<default key="_controller">SKITCBundle:DBAL:entity</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>

	</route>

	<route
		id="itc_dbal_configuration"
		path="/configuration/{_locale}">

		<default key="_controller">SKITCBundle:DBAL:configuration</default>
		<default key="_locale">%framework.translator.fallback%</default>

		<requirement key="_locale">%framework.translator.locales%</requirement>
	</route>

</routes>