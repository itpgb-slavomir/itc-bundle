<?xml version="1.0" encoding="UTF-8"?>

<!-- http://phpunit.de/manual/4.1/en/appendixes.configuration.html -->
<phpunit
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.1/phpunit.xsd"
	backupGlobals="false"
	colors="true"
	bootstrap="var/bootstrap.php.cache">

	<testsuites>
		<testsuite name="ITC Tests">
			<directory>tests</directory>
		</testsuite>
	</testsuites>

	<groups>
		<include>
			<group>Performance Group</group>
		</include>
		<exclude>
			<group>Funcional Group</group>
		</exclude>
		<exclude>
			<group>Assert Equal Group</group>
		</exclude>
	</groups>

	<php>
		<server
			name="KERNEL_DIR"
			value="app/" />
	</php>

	<filter>
		<whitelist>
			<directory>src</directory>
			<exclude>
				<directory>src/*/*Bundle/Resources</directory>
				<directory>src/*/*Bundle/Tests</directory>
				<directory>src/*/Bundle/*Bundle/Resources</directory>
				<directory>src/*/Bundle/*Bundle/Tests</directory>
			</exclude>
		</whitelist>
	</filter>

	<logging>
		<log
			type="coverage-html"
			target="phpunit/coverage-html"
			charset="UTF-8"
			highlight="false"
			lowUpperBound="35"
			highLowerBound="70" />
		<log
			type="coverage-clover"
			target="phpunit/coverage.xml" />
		<log
			type="coverage-php"
			target="phpunit/coverage.serialized" />
		<log
			type="coverage-text"
			target="php://stdout"
			showUncoveredFiles="false" />
		<log
			type="json"
			target="phpunit/logfile.json" />
		<log
			type="tap"
			target="phpunit/logfile.tap" />
		<log
			type="junit"
			target="phpunit/logfile.xml"
			logIncompleteSkipped="false" />
		<log
			type="testdox-html"
			target="phpunit/testdox.html" />
		<log
			type="testdox-text"
			target="phpunit/testdox.txt" />
	</logging>
</phpunit>
